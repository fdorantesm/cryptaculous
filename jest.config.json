{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "./coverage",
  "testEnvironment": "node",
  "roots": ["<rootDir>/src/"],
  "moduleNameMapper": {
    "^@/(.*)": "<rootDir>/src/$1",
    "^#/(.*)": "<rootDir>/test/$1"
  }
}
